{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "ES2015"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": false,
    "noImplicitAny": false,
    "noEmit": false,
    "skipLibCheck": true,
    "outDir": ".",
    "rootDir": ".",
    "downlevelIteration": true,
    "typeRoots": [
      "./node_modules/@figma"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "code.js"
  ]
}